<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.txurdinaga.didaktikapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".SharedPrefs"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.DidaktikAPP"
        tools:targetApi="31">
        <activity
            android:name=".MainAtencionCliente"
            android:exported="false" />
        <activity
            android:name=".activities.Room"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activities.MainMenu"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".fragments.FragmentInformacion"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activities.MainDialogo"
            android:exported="false"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activities.MainInicio"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainContrasena"
            android:exported="false"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".actividades.MainActividad1"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.DidaktikAPP.NoActionBar" />
        <activity
            android:name=".activities.MainInfoModos"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DidaktikAPP.NoActionBar" />
        <activity
            android:name=".actividades.MainActividad2"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.DidaktikAPP.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".actividades.MainActividad3"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.DidaktikAPP.NoActionBar" />
        <activity
            android:name=".actividades.MainActividad4"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.DidaktikAPP.NoActionBar" />
        <activity
            android:name=".actividades.MainActividad5"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.DidaktikAPP.NoActionBar" />
        <activity
            android:name=".actividades.MainActividad6"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.DidaktikAPP.NoActionBar" />
        <activity
            android:name=".actividades.MainActividad7"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.DidaktikAPP.NoActionBar" />
    </application>

</manifest>